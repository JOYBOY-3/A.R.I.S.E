# --- Security ---
# Flask secret key for JWT signing. MUST be a long random string.
# Generate one with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=CHANGE_ME_TO_A_RANDOM_64_CHAR_HEX_STRING

# --- Server ---
# Set to 'production' for deployment, 'development' for local dev
FLASK_ENV=development
HOST=0.0.0.0
PORT=5000

# --- Database ---
DATABASE_PATH=attendance.db

# --- Admin ---
# Default admin password (used only on first database setup)
ADMIN_DEFAULT_PASSWORD=admin

